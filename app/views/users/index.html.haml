%h1 Зарегистрированные пользователи   


.list-group
  -@users.each do |user|
    .list-group-item
      .pull-right
        =link_to user_path(user), class: 'btn btn-info btn-sm' do
          =fa_icon 'eye'
        -if (@current_user && user.id == @current_user.id)
          =link_to edit_user_path(user), class: 'btn btn-primary btn-sm' do
            =fa_icon 'edit'
          =link_to user, method: :delete, data: {confirm: "Вы уверены?"}, class: 'btn btn-danger btn-sm' do
            =fa_icon 'trash-o'
      %h4=user.full_name   
     
     
      .clearfix 

