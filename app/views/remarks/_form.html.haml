= form_for @remark do |f|
  - if @remark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@remark.errors.count, "error")} prohibited this remark from being saved:"
      %ul
        - @remark.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
